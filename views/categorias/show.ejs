<style>
    #imghome {
        display: none;
    }
</style>

</head>

<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="wrapper w3-container-fluid" style="width:100%; overflow-x:auto;">
            <br><br><br><br>
            <section class="w3-container-fluid">
                <div class="w3-container-fluid">
                    <div class="responsive w3-container text-left row col-12">
                        <center>
                            <h4>Você está visualisando os dados completos da Categoria <b style="color: red;">
                                    <br>
                                    <%=categorias.nomecategoria%>
                                </b> </h4><br><br>
                        </center>

                        <div class="container responsive row col-12">
                            <div class="container row col-12">
                                <div class="col-md-2">
                                <div class="col-md-1">
                                    <img class="rounded" src="/img/perfilusuario/categoriaprodutos.jpg"
                                        style="width:100px; height:80px">
                                </div>                                </div>

                                <div class="container border row col-9">
                                    <div class="col-md-2 text-center">
                                        <div class="form-group text-center">
                                            <div><small><strong>ID</strong></small></div>
                                            <div>
                                                <%=categorias.id%>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 text-center">
                                        <div><small><strong>Nome da Categoria</strong></small></div>
                                        <div>
                                            <%=categorias.nomecategoria%>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <div><small><strong>Descricao da Categoria</strong></small></div>
                                        <div>
                                            <%=categorias.descricao%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <br><br>
                <div class="col-4 d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Qual ação deseja realizar?</h4>
                </div>
                <div class="responsive container  col-md-12">
                    <% if(l.Tipousuario.tipousuario=='Administrador' || l.Tipousuario.tipousuario=='Gerente' ) {%>
                        <div class="col-md-1" id="divleft"><a
                                onclick="location = '/categorias/<%= categorias.id%>/edit'" type="button"
                                class="btn btn-success btn-sm-3 profile-button text-white"
                                onsubmit="return edit();">Editar<i title="Editar Esta Categoria"
                                    style="font-size: 15px;">
                                </i>
                            </a>
                        </div>
                        <% } else { %>

                            <% } %>

                                <% if(l.Tipousuario.tipousuario=='Administrador' ) {%>
                                    <div class="col-md-1" id="divleft">
                                        <form method="POST" action="/categorias/<%= categorias.id %>?_method=DELETE"
                                            id="view" onsubmit="return del();">
                                            <button action="submit" class="btn btn-danger btn-sm-3 text-white"
                                                title="Deletar Esta Categoria"><i
                                                    style="font-size: 15px;">Deletar</i>
                                            </button>
                                        </form>
                                    </div>
                                    <% } else { %>

                                        <% } %>
                                            <div class="col-md-8" id="divright">
                                                <a class="col-md-8" href="/categorias ">Voltar para Listagem de Categorias
                                            </a>
                                            </div>
                </div>
                <br> <br>
            </section>
        </div>

        <script src="/js/alertas.js"></script>

</body>