<style>
    #imghome {
        display: none;
    }
</style>
</head>


<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="wrapper container-fluid">
            <br> <br> <br> <br>
            <section class="container-fluid"><div class="container-fluid">
                    <div class="responsive container text-left row-col-12">
                        <center>
                            <h4>Você está no cadastro de <b style="color: red;">Nova Forma de Pagamento:</b>
                                <br>
                                <br>
                            </h4>
                       </center>
                        <form class="container" action="/formapagtos" method="POST" onsubmit="return save();">
                            <div class="container-fluid  float-center row-col-12">
                                <div class="form-row col-md-12">
                                    <div class="form col-md-4">
                                        <img class="rounded" src="/img/perfilusuario/formadepagto.jpg"
                                            style="width:150px; height:100px">
                                    </div>
                                    <div class="border col-md-6">
                                        <div class="col-md-12">
                                            <label for="formadepagto" class="text-center ">Nome do Tipo de
                                                Usuário</label>
                                            <input type="text " name="formadepagto" id="formadepagto"
                                                class="form-control" placeholder="Nome da Nova Forma de Pagamento"
                                                required autofocus />
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mb-3 col-8">

                                        <h4 class="text-left"> <br>
                                            <br>Qual ação deseja realizar?
                                        </h4>
                                    </div>

                                    <br>
                                    <div class="row container">
                                        <% if(l.Tipousuario.tipousuario=='Administrador' ||
                                            l.Tipousuario.tipousuario=='Gerente' ||
                                            l.Tipousuario.tipousuario=='Supervisor' || l.tipousuarioid==2) {%>
                                            <div class="col-md-2 float-end "><button type="submit"
                                                    class="btn btn-success btn-sm-3 profile-button text-white"
                                                    onsubmit="return save();"><i
                                                        title="Salvar Alterações desta Forma de Pagto"
                                                        style="font-size: 15px;">Salvar</i></button></div>
                                            <% } else { %>

                                                <% } %>

                                                    <div class="col-md-6">
                                                        <a class="col-md-12 float-end " href="/formapagtos">Voltar para
                                                            Listagem das
                                                            Formas de Pagamento</a>
                                                    </div>
                        </form>
                    </div>

                    <br>
                </div>
        </div>

        </section>
        </div>
        <script src="/js/alertas.js"></script>
        <br> <br>
</body>

</html>