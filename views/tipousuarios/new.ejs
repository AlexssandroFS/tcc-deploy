<style>
    #imghome {
        display: none;
    }
</style>
</head>

<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="wrapper container-fluid">
            <section class="container-fluid">
                <br> <br> <br> <br>
                <div class="container-fluid">
                    <div class="responsive container text-left row-col-12">
                        <center>
                            <h4>Você está no cadastro do <b style="color: red;">Novo Tipo de Usuário:</b>
                            </h4> <br>
                        </center>
                        <br>

                        <form class="container" action="/tipousuarios" method="POST" onsubmit="return save();">
                            <div class="w3-container-fluid float-cente row col-md-12">
                                <div class="form-row col-md-12">
                                    <div class="form col-md-2">
                                        <img class="rounded" src="/img/perfilusuario/perfilusuario-3.jpg"
                                            style="width:100px; height:80px">
                                    </div>
                                    <div class="border row col-md-8">
                                        <div class="col-md-8">
                                            <label for="tipousuario" class="text-center ">Nome do Tipo de
                                                Usuário</label>
                                            <input type="text " name="tipousuario" id="tipousuario" class="form-control"
                                                placeholder="Nome do Novo Tipo Usuário" required autofocus />
                                        </div>
                                        <div class="col-md-3">
                                            <label for="statusperfil">Status Perfil</label>
                                            <select id="statusperfil" class="form-control" name="statusperfil" autofocus
                                                required>
                                                <option value="Escolher">Escolher</option>
                                                <option value="Ativo">Ativo</option>
                                                <option value="Inativo">Inativo</option>
                                            </select>
                                        </div>
                                    </div>

                            
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4 class="text-right"> <br> <br>Qual ação deseja realizar?</h4>
                                    </div>

                                    <br>
                                    <div class="row container">
                                        <% if(l.Tipousuario.tipousuario=='Administrador' ||
                                            l.Tipousuario.tipousuario=='Gerente' ) {%>
                                            <div class="col-md-2 float-end "><button type="submit"
                                                    class="btn btn-success btn-sm-3 profile-button text-white"
                                                    onsubmit="return save();"><i
                                                        title="Salvar Alterações deste Tipo de Usuário"
                                                        style="font-size: 15px;">Salvar</i></button></div>
                                            <% } else { %>

                                                <% } %>
                                                    <div class="col-md-8">
                                                        <a class="col-md-12 float-end " href="/tipousuarios ">Voltar
                                                            para
                                                            Listagem dos Tipos de Usuários</a>
                                                    </div>

                                    </div>
                        </form>


                        <br>
                    </div>
                </div>
                <section>
        </div>
        <script src="/js/alertas.js"></script>
</body>