<style>
    #imghome {
        display: none;
    }
</style>

</head>

<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="wrapper w3-container-fluid" style="width:100%; overflow-x:auto;">
            <br><br><br><br>
            <section class="w3-container-fluid">
                <div class="w3-container-fluid">
                    <div class="responsive w3-container text-left row col-12">
                        <center>
                            <h4>Você está visualisando os dados completos do Tipo de Usuário: <b style="color: red;">
                                    <br>
                                    <%=tipousuarios.tipousuario%>
                                </b> </h4><br><br>
                        </center>

                        <div class="container responsive row col-12">
                            <div class="container row col-12">
                                <div class="col-md-2">
                                <div class="col-md-2">
                                    <img class="rounded-circle" src="/img/perfilusuario/perfilusuario-3.jpg"
                                        style="width:100px; height:80px">
                                </div>                                </div>

                                <div class="container border row col-9">
                                    <div class="col-md-2 text-center">
                                        <div class="form-group text-center">
                                            <div><small><strong>ID</strong></small></div>
                                            <div>
                                                <%=tipousuarios.id%>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 text-center">
                                        <div><small><strong>Nome do Tipo de Usuário</strong></small></div>
                                        <div>
                                            <%=tipousuarios.tipousuario%>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div><small><strong>Status Perfil</strong></small></div>
                                        <div>
                                            <%=tipousuarios.statusperfil%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <br><br>
                <div class="col-4 d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Qual ação deseja realizar?</h4>
                </div>
                <div class="responsive container  col-md-12">
                    <% if(l.Tipousuario.tipousuario=='Administrador') {%>
                        <div class="col-md-1" id="divleft"><a
                                onclick="location = '/tipousuarios/<%= tipousuarios.id%>/edit'" type="button"
                                class="btn btn-success btn-sm-3 profile-button text-white"
                                onsubmit="return edit();">Editar<i title="Editar Este Tipo de Usuario"
                                    style="font-size: 15px;">
                                </i>
                            </a>
                        </div>
                        <% } else { %>

                            <% } %>

                                <% if(l.Tipousuario.tipousuario=='Administrador' ) {%>
                                    <div class="col-md-1" id="divleft">
                                        <form method="POST" action="/tipousuarios/<%= tipousuarios.id %>?_method=DELETE"
                                            id="view" onsubmit="return del();">
                                            <button action="submit" class="btn btn-danger btn-sm-3 text-white"
                                                title="Deletar Este Tipo de Usuario"><i
                                                    style="font-size: 15px;">Deletar</i>
                                            </button>
                                        </form>
                                    </div>
                                    <% } else { %>

                                        <% } %>
                                            <div class="col-md-8" id="divright">
                                                <a class="col-md-8" href="/tipousuarios ">Voltar para Listagem dos Tipos
                                                    de
                                                    Usuarios</a>
                                            </div>
                </div>
                <br> <br>
            </section>
        </div>

        <script src="/js/alertas.js"></script>

</body>