<link href="../css/tables_view.css" rel="stylesheet">
<title>Top Açaí - Page</title>
<style>
    #imghome {
        display: none;
    }

    label {
            float: left;
        }
</style>


<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="wrapper container-fluid">
            <section class="w3-container-fluid">
                <div class="w3-container-fluid col-md-12">
                    <div class="container-fluid responsive text-left col-12" id="pdf2htmldiv">
                        <br><br><br>
                        <form method="POST" action="/usuarios/<%=usuarios.id%>?_method=PATCH" onsubmit="return edit();">
                            <center>
                                <h4>Você está editando os dados do Usuário: <b style="color: red;">
                                        <br>
                                        <%=usuarios.nome%>
                                </h4></b></h4>
                            </center> <br>
                            <div class="w3-container col-md-12">

                                <div class="w3-container row col-md-12">

                                    <!-- <div class="col-md-2 border-right">
                                        <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="/img/perfilusuario/perfilusuario-1.jpg" style="width:80px; height:150px">
                                            <br>
                                            <span class="font-weight-bold">Nome Completo</span><span class="text-white bg-danger"><%=usuarios.nome%></span>
                                            <br>
                                            <span class="font-weight-bold">Tipo de Perfil do Usuário</span><span class="text-black-50 "><%=tipous.tipousuario%> </span></div>
                                    </div>
                                    -->
                                    <div class="col-md-6 border-right border">
                                        <div class="p-3 py-6 text-left">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <h5 class="text-right">Dados do Perfil do Usuário</h5>
                                            </div>
                                            <div class="row mt-12">
                                                <img class="rounded-circle" src="/img/perfilusuario/perfilusuario-2.jpg"
                                                    style="width:140px; height:100px">

                                                <div class="col-md-2"><label class="labels">ID Login</label><input
                                                        type="text" class="form-control" placeholder="" id="id"
                                                        value="<%=usuarios.Login.id%>" disabled></div>
                                                <div class="col-md-6"><label class="labels">Tipo de
                                                        Usuário</label><input type="text" class="form-control"
                                                        placeholder="" id="tipousuario" value="<%=tipous.tipousuario%>"
                                                        disabled></div>
                                            </div>
                                            <div class="form-group col-md-7">
                                                <label for="statuslogin">Status Login</label>
                                                <select id="statuslogin" class="form-control" name="statuslogin">
                                                    autofocus>
                                                    <option value="<%=usuarios.Login.id%>">
                                                        <%=usuarios.Login.statuslogin%>
                                                    </option>
                                                    <% if(l.tipousuarioid==1 || l.tipousuarioid==4 ||
                                                        l.id==usuarios.Login.id) {%>
                                                        <option value="Ativo">Ativo</option>
                                                        <option value="Inativo">Inativo</option>
                                                        <% } else { %>

                                                            <% } %>
                                                </select>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5 class="text-right">Dados de Login do Usuário</h5>
                                        </div>
                                        <div class="row mt-12">
                                            <div class="col-md-7"><label class="labels">Usuário Login</label><input
                                                    type="text" class="form-control" placeholder="" id="usuariologin"
                                                    name="usuariologin" value="<%=usuarios.Login.usuariologin%>" enable
                                                    autofocus></div>
                                            <div class="col-md-5"><label class="labels">Senha</label><input type="text"
                                                    class="form-control" placeholder="" id="senha" name="senha"
                                                    value="<%=usuarios.Login.senha%>" enable autofocus></div>
                                        </div>
                                        <br>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5 class="text-right">Dados cadastrais do Endereço do Usuário:</h5>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-3"><label class="labels">ID Usuario</label><input
                                                    type="text" class="form-control" placeholder="" id="id"
                                                    value="<%=usuarios.id%>" disabled></div>
                                            <div class="col-md-9"><label class="labels">Nome Completo</label><input
                                                    type="text" class="form-control" placeholder="" id="nome"
                                                    name="nome" value="<%=usuarios.nome%>" enable autofocus></div>
                                            <div class="col-md-6"><label class="labels">CPF</label><input type="text"
                                                    class="form-control" placeholder="" id="cpf" name="cpf"
                                                    value="<%=usuarios.cpf%>" enable autofocus></div>
                                            <div class="col-md-6"><label class="labels">Data de Nascimento</label><input
                                                    type="date" class="form-control" placeholder="" id="datanasc"
                                                    name="datanasc" value="<%=usuarios.datanasc%>" enable autofocus>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 border-right border">
                                        <div class="p-3 py-5 ">
                                            <div class="row mt-3">
                                                <h5 class="text-left">Dados cadastrais do Endereço do Usuário:</h5>
                                                <div class="col-md-12"><label class="labels">Endereço</label><input
                                                        type="text" class="form-control" placeholder="" id="endereco"
                                                        name="endereco" value="<%=usuarios.Endereco.endereco%>" enabled
                                                        autofocus></div>
                                                <div class="col-md-4"><label class="labels">Número</label><input
                                                        type="text" class="form-control" placeholder="" id="nro"
                                                        name="nro" value="<%=usuarios.Endereco.nro%>" enable autofocus>
                                                </div>
                                                <div class="col-md-8"><label class="labels">Complemento</label><input
                                                        type="text" class="form-control" placeholder="" id="complemento"
                                                        name="complemento" value="<%=usuarios.Endereco.complemento%>"
                                                        enable autofocus></div>
                                                <div class="col-md-12"><label class="labels">Bairro</label><input
                                                        type="text" class="form-control" placeholder="" id="bairro"
                                                        name="bairro" value="<%=usuarios.Endereco.bairro%>" enable
                                                        autofocus></div>
                                                <div class="col-md-5"><label class="labels">CEP</label><input
                                                        type="text" class="form-control" placeholder="" id="cep"
                                                        name="cep" value="<%=usuarios.Endereco.cep%>" enable autofocus>
                                                </div>
                                                <div class="form-group col-md-7">
                                                    <label for="estado">Estado</label>
                                                    <select id="estados" class="form-control" name="estados" autofocus>
                                                        <option value=" <%=estadosvalue.id%>">
                                                            <%=estadosvalue.estados%>
                                                        </option>
                                                        <% for(e of estados) { %>
                                                            <option value="<%=e.id%>">
                                                                <%=e.estados%>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                </div>

                                                <div class="col-md-12"><label class="labels">Cidade</label><input
                                                        type="text" class="form-control" placeholder="" id="cidade"
                                                        name="cidade" value="<%=usuarios.Endereco.cidade%>" enable
                                                        autofocus></div>
                                                <br>
                                                <div class="row mt-12">
                                                    <h5 class="text-left">Dados de Contato do Usuário</h5>
                                                    <div class="col-md-12"><label class="labels">E-mail</label><input
                                                            type="text" class="form-control" placeholder="" id="email"
                                                            name="email" value="<%=usuarios.Contato.email%>" enable
                                                            autofocus></div>
                                                    <div class="col-md-6"><label class="labels">Telefone</label><input
                                                            type="text" class="form-control" placeholder=""
                                                            id="telefone" name="telefone"
                                                            value="<%=usuarios.Contato.telefone%>" enable autofocus>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="container d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-right">Qual ação deseja realizar?</h4>
                                </div>

                                <div class="container  row col-md-12">
                                    <% if(l.tipousuarioid==1 || l.tipousuarioid==4 || l.id==usuarios.Login.id) {%>
                                        <div class="col-md-2 float-end">
                                            <button type="submit"
                                                class="btn btn-success btn-sm-3 profile-button text-white"
                                                onsubmit="return save();"><i class="fa fa-floppy-o"
                                                    title="Salvar Alterações deste Usuário" aria-hidden="true"
                                                    style="font-size: 25px;"></i> Salvar
                                            </button>
                                        </div>

                                        <% } else { %>
                                            <% } %>

                                                <% if(l.tipousuarioid==1) {%>
                                                    <div class="col-md-2 float-end">
                                                        <form method="POST"
                                                            action="/usuarios/<%=usuarios.id %>?_method=DELETE"
                                                            id="view" onsubmit="return del();">
                                                            <button action="submit"
                                                                class="btn btn-danger btn-sm-3 text-white"
                                                                title="Deletar Este Usuário"><i class="fa fa-trash-o"
                                                                    aria-hidden="true"
                                                                    style="font-size: 25px;"></i>Deletar
                                                            </button>
                                                        </form>
                                                    </div>
                                                    <% } else { %>

                                                        <% } %>
                                                            <div class="col-md-8">
                                                                <a href="/usuarios ">Voltar para Listagem dos
                                                                    Usuários</a>
                                                            </div>

                                </div>
                        </form>
                    </div>
                </div>
                <br><br>
        </div>
        </div>
        </section>

        </div>

        <script type='text/javascript'
            src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
        <script type='text/javascript' src='#'></script>
        <script type='text/javascript' src='#'></script>
        <script type='text/javascript' src='#'></script>
        <script type='text/javascript'>
        </script>
        <script type='text/javascript'>
            var myLink = document.querySelector('a[href="#"]');
            myLink.addEventListener('click', function (e) {
                e.preventDefault();
            });
        </script>

        <script src="/js/alertas.js"></script>

</body>

</html>