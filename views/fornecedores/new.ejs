<style>
    #imghome {
        display: none;
    }
</style>
</head>

<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="w3-container-fluid text-center">
            <section class="w3-container-fluid responsive col-md-12">
                <br><br><br> <br>
                <div class="container-fluid responsive">
                    <div class="responsive container text-left row col-12" id="pdf2htmldiv">
                        <center>
                            <h4>Você está no cadastro de <b style="color: red;">Novo Fornecedor:</b>
                            </h4><br>
                        </center>

                        <!--class="jumbotron"   se usar deixa a area da tabela toda CINZA-->
                        <form class="w3-container-fluid responsive" action="/fornecedores" method="POST"
                            onsubmit="return save();">
                            <div class="container-fluid border float-center">
                                <h5>Dados cadastrais do Fornecedor:</h5>
                                <div class="form-row">
                                    <div class="col-md-2">
                                        <img class="rounded-circle" src="/img/perfilusuario/Fornecedor.jpg"
                                            style="width:160px; height:100px">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="razaosocial">Razão Social</label>
                                        <input type="text" class="form-control" id="razaosocial"
                                            placeholder="Razão Social" name="razaosocial" autofocus />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="nomefantasia ">Nome Fantasia</label>
                                        <input type="text" class="form-control" id="nomefantasia"
                                            placeholder="Nome Fantasia" name="nomefantasia" autofocus />
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="ramoatuacao ">Descrição Ramo de Atuação</label>
                                        <input type="text" class="form-control" id="ramoatuacao"
                                            placeholder="Descrição Ramos de Atuação" name="ramoatuacao" autofocus />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="cnpj">CNPJ</label>
                                        <input type="text" class="form-control" id="cnpj" placeholder="CNPJ" name="cnpj"
                                            autofocus />
                                    </div>
                                </div>
                                <br>
                                <h5>Dados de endereço do Fornecedor: </h5>

                                <div class="form-row">
                                    <div class="form-group col-md-7">
                                        <label for="endereco">Endereço</label>
                                        <input type="text" class="form-control" id="endereco" placeholder="Endereço"
                                            name="endereco" autofocus />
                                    </div>
                                    <div class="form-group col-md-2 ">
                                        <label for="nro ">Número</label>
                                        <input type="text " class="form-control" id="nro" placeholder="Nro" name="nro"
                                            autofocus />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="complemento">Complemento</label>
                                        <input type="text" class="form-control" id="complemento"
                                            placeholder="Complemento" name="complemento" autofocus />
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="bairro">Bairro</label>
                                        <input type="text" class="form-control" id="bairro" placeholder="Bairro"
                                            name="bairro" autofocus />
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label for="cidade">Cidade</label>
                                        <input type="text" class="form-control" id="cidade" placeholder="Cidade"
                                            name="cidade" autofocus />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="estado">Estado</label>
                                        <select id="estado" class="form-control" name="estadosid" autofocus>
                                            <option value="Escolher">Escolher</option>
                                            <% for(estado of estados) { %>
                                                <option value="<%=estado.id%>">
                                                    <%= estado.estados%>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>

                                    <div class="form-group col-md-2">
                                        <label for="cep">CEP</label>
                                        <input type="text" class="form-control" id="cep" placeholder="CEP" name="cep"
                                            autofocus />
                                    </div>
                                </div>
                                <br>
                                <h5>Dados de contato do Fornecedor: </h5>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" placeholder="Email"
                                            name="email" autofocus />
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label for="telefone">Telefone</label>
                                        <input type="text" class="form-control" id="telefone" placeholder="Telefone"
                                            name="telefone" autofocus />
                                    </div>
                                    <br>
                                </div>
                            </div>
                            <br>
                            <div class="container-fluid responsive col-12 text-center">

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-right col-md-4">Qual ação deseja realizar?</h4>
                                </div>
                                <% if(l.Tipousuario.tipousuario=='Administrador' ||
                                    l.Tipousuario.tipousuario=='Atendente' ||l.Tipousuario.tipousuario=='Gerente' ||
                                    l.Tipousuario.tipousuario=='Supervisor' || l.tipousuarioid==2) {%>
                                    <div class="row col-12">
                                        <div class="col-md-2"><button type="submit"
                                                class="btn btn-success btn-sm-3 profile-button text-white"
                                                onsubmit="return save();"><i title="Salvar Alterações deste Fornecedor"
                                                    style="font-size: 20px;">
                                                    Salvar</i>
                                            </button>
                                        </div>
                                        <% } else { %>

                                            <% } %>

                                                <div class="col-md-10">
                                                    <a href="/fornecedores ">Voltar para Listagem dos Fornecedores</a>
                                                </div>
                                    </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>


        <script src="/js/alertas.js"></script>

</body>