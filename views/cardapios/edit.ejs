<body className='snippet-body'>
    <%- include('../partials/home'); %>
        <div class="wrapper w3-container">
               <br><br><br><br>
               <section class="container-fluid">
                <div class=" container-fluid">
                    <div class="responsive container text-left row-col-12">
                        <center>
                            <h4>Você está editando o cadastro do Cardápio:
                                <br> <b>
                                    <h3 style="color: red;">
                                        <%=cardapios.itemcardapio%>
                                    </h3>
                                </b>
                            </h4>
                        </center>
                        <br>
                        
                        <form class="responsive container-fluid" action="/cardapios/<%=cardapios.id%>?_method=PATCH" id="view" method="POST" onsubmit="return save();">
                            <div class="container responsive row col-md-12">
                                <div class="form-group col-md-3">
                                    <div class="col-md-2">
                                        <img class="rounded" src="/img/perfilusuario/cardapios.jpg" style="width:160px; height:210px">
                                    </div>
                                </div>

                                <div class="responsive container border text-left row col-md-9">
                                    <div class="form-group col-md-12">
                                        <label for="id">ID</label>
                                        <%= cardapios.id %>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="itemcardapio">Item do Cardápio</label>
                                        <input type="text" class="form-control" id="itemcardapio" placeholder="" name="itemcardapio" value="<%=cardapios.itemcardapio%>" autofocus/>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="descricao">Descrição do Cardápio</label>
                                        <input type="text" class="form-control" id="descricao" placeholder="" name="descricao" value="<%=cardapios.descricao%>" autofocus/>
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="nomecategoria">Nome da Categoria</label>
                                        <select id="nomecategoria" class="form-control" name="nomecategoria" autofocus>
                                            <option value="<%=categoriasvalue.id%>"> <%=categoriasvalue.nomecategoria%> </option>
                                      <% for(cat of categoriasproduto) { %>
                                        <option value="<%=cat.id%>">
                                            <%=cat.nomecategoria%>
                                                </option>
                                                <% } %>
                                                    </select>
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label for="valor">Valor</label>
                                        <input type="float" min="0"
                                                    onkeypress="return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 46 && event.charCode <= 57"
                                                    class="form-control" id="valor" placeholder=""
                                                    name="valor" value="<%=cardapios.valor%>" required
                                                    autofocus />
                                               
                                    </div>
                                    <footer>
                                        <b>
                                        Obs: Campo "Valor" se alterar, deve declarar com "PONTO", assim R$2.5 ou R$1150.50
                                    </b>
                                    </footer>
                                </div>
                            </div>

                            <br> <br>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-right">Qual ação deseja realizar?</h4>
                                </div>
                                <div class="row col-md-12">
                                    <div class="col-md-1">
                                        <%if (l.tipousuarioid==1 || l.tipousuarioid==2 || l.tipousuarioid==4) {%>
                                        <button type="submit" class="btn btn-success btn-sm-3 profile-button text-white" onsubmit="return save();">
                                        <i title="Salvar Alterações desta Cardapio" style="font-size: 20px;">Salvar</i>
                                    </button>
                                    <% } else{%>
                                        <% }%>
                                </div>
                                       
                                        <div class="col-md-1">
                                        <% if(l.Tipousuario.tipousuario=='Administrador' ) {%>
                                            <form action="/cardapios/<%= cardapios.id %>?_method=DELETE"
                                                method="POST" id="view" onsubmit="return del();">
                                                <button action="submit"
                                                    class="btn btn-danger btn-sm-3 text-white"
                                                    title="Deletar Esta Categoria"><i
                                                        style="font-size: 20px;">Deletar</i>
                                                </button>
                                            </form>

                                            <% } else { %>

                                                <% } %>
                                    </div>
                                    <div class="col-md-8">
                                        <a class="col-md-8" href="/cardapios ">Voltar para Listagem de Cardapios</a>
                                    </div>
                                    <div>
                                        <div>

                        </form>
                        </div>
                        
                        </div>
            </section>
            </div>
            <script src="/js/alertas.js"></script>
            
</body>

