<style>
    #imghome {
        display: none;
    }
</style>
</head>

<body className='snippet-body'>
    <%- include('../../partials/home'); %>
        <div class="wrapper w3-container">
            <br> <br> <br> <br>
             <section class="container-fluid">
               
                <div class=" container-fluid">
                    <div class="container-fluid responsive" id="pdf2htmldiv">
                        <div class="responsive container text-left row-col-12">
                            <center>
                                <h4>Você está editando os dados do <b style="color: red;">Nome do Produto</b> para Estoque:
                                    </h4>
                                <h3 style="color: rgb(132, 4, 158);">
                                    <b>
                                        <%=produtos.nomeprod%>
                                    </b>
                                </h3>
                                <br>
                            </center>
                            <br>
                            <div class="container responsive row col-md-12">
                                <div class="form-group col-md-3">
                                    <form class="responsive container-fluid" id="validar"
                                        action="/produtos/cadprod/<%=produtos.id%>?_method=PATCH" id="view"
                                        method="POST" onsubmit="return save();">

                                        <div class="form col-md-2">
                                            <img class="rounded-circle" src="/img/perfilusuario/produtos.jpg"
                                                style="width:150px; padding:0px,0px,opx,20px; height:80px">
                                        </div>
                                </div>
                                <div class="responsive container border text-left row col-md-9">
                                    <div class="form-group col-md-1">
                                        <label for="id">ID</label>
                                        <input type="text" class="form-control" id="id" placeholder="" name="id"
                                            value="<%=produtos.id%>" disabled autofocus />
                                    </div>
                                    <div class="form-group col-md-10">
                                        <label for="nomeprod">Nome do Produto</label>
                                        <input type="text" class="form-control" id="nomeprod" placeholder=""
                                            name="nomeprod" value="<%=produtos.nomeprod%>" autofocus />
                                    </div>
                                    <div class="form-group col-md-7">
                                        <label for="nomecategoria">Nome da Categoria</label>
                                        <select id="nomecategoria" class="form-control" name="nomecategoria" autofocus>
                                            <option value="<%=categoriasvalue.id%>">
                                                <%=categoriasvalue.nomecategoria%>
                                            </option>
                                            <% for(cat of categoriasproduto) { %>
                                                <option value="<%=cat.id%>">
                                                    <%=cat.nomecategoria%>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                   <div class="form-group col-md-3">
                                        <label for="qtdeminima">
                                            Estoque Mínimo</label>
                               <!--event.charCode >= 46   Atenção: desconsiderado nro "46", pois é o ponto, e como é controle de numero inteiro para estoque mínimo, nao pode ter vírgula --> 
F
                                        <input type="number" class="form-control col-md-8" min="0"
                                            onkeypress="return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 47 && event.charCode <= 57"
                                            oninput="Mult()" id="qtdeminima" value="<%=produtos.qtdeminima%>"
                                            name="qtdeminima" required autofocus>
                                         </div>

                                </div>
                                <br>



                                <!-- Script -->
                                <script src="../../../js/validarDados.js">
                                </script>
                                <br>
                                <br>
                            </div>

                        </div>
                    </div>
                    <br>
                    <div class="responsive container row col-md-12">
                        <div class="col-md-4 d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Qual ação deseja realizar?</h4>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-1">
                                <% if(l.Tipousuario.tipousuario=='Administrador' || l.Tipousuario.tipousuario=='Atendente' || l.Tipousuario.tipousuario=='Gerente'
                                    || l.Tipousuario.tipousuario=='Supervisor' || l.tipousuarioid==2) {%>

                                    <button type="submit" class="btn btn-success btn-sm-3 profile-button text-white"
                                        onsubmit="return edit();"><i title="Salvar Alterações Deste Produto"
                                            style="font-size: 15px;">Salvar</i></button>
                                    <% } else { %>

                                        <% } %>
                            </div>


                            <div class="col-md-1">
                                <% if(l.Tipousuario.tipousuario=='Administrador' ) {%>
                                    <form method="POST" action="/produtos/cadprod/<%= produtos.id %>?_method=DELETE"
                                        id="view" onsubmit="return del();">
                                        <button action="submit" class="btn btn-danger btn-sm-1 text-white"
                                            title="Deletar Este Produto"><i style="font-size: 15px;">Deletar</i>
                                        </button>
                                    </form>
                                    <% } else { %>

                                        <% } %>
                            </div>

                            <div class="col-md-8">
                                <a href="/produtos/cadprod ">Voltar para Listagem de
                                    Produtos</a>
                            </div>

                        </div>
                        </form>
                    </div>
                </div>

                <br>

        </div>

        </section>
        </div>
        <script src="/js/alertas.js"></script>

        <br> <br>
</body>

</html>