<head>
    <style>
        #imghome {
            display: none;
        }
    </style>
    
    <script>
          //INICIO atualizar o ID do produto na edição na SAÍDA DE PRODUTOS
      function updateIDProd() {
    
    var select = document.getElementById('atualizarIDProd');
    var option = select.options[select.selectedIndex];
    //var select = document.getElementById('atualizarValor');
    //abaixo para atualizar o ID do produto para EDICAO
    document.getElementById('valueIDNomeProd').value = option.value;
    
    //abaixo pega valor unitario atual atraves do ID do PRODUTO ao fazer a troca valoru unitario produto
    document.getElementById('valueValor').value = option.value;
    // document.getElementById('valueCategoria').value = option.value;
    
    
    // var t1 = document.querySelector('input[name="valorunit"]');
    //// var t2 = document.querySelector('textarea[name="valorunit"]');
    // t2.value = t1.value;
    
    }
    
    updateIDProd(); //formulario recebe atraves do "id="update"
    //FIM atualizar o ID do produto na edição na SAÍDA DE PRODUTO
    
    </script>
    
    </head>


<body className='snippet-body'>
    <%- include('../../partials/home'); %>
        <div class="wrapper container-fluid">
                  <br><br><br> <br>
                  <section class="container-fluid" id="pdf2htmldiv">
          
                <div class="container-fluid">
                    <div class="responsive container text-left row-col-12">
                        <center>
                            <h4>Você está editando os dados de <b style="color: red;">SAÍDA de Despesa:</b>
                                <br>
                                <h2 style="color: rgb(132, 4, 158);">
                                </h2>
                            </h4>
                        </center>
                    </div>
                    <br>
                    <form class="responsive container-fluid" id="validar" oninput="Mult()"
                        action="/despesas/saidas/<%=despesassaidas.id%>?_method=PATCH" id="view" method="POST"
                        onsubmit="return save();">
                        <div class="responsive container-fluid text-left  row-col-12">
                            <div class="container-fluid  float-center">
                                <div class="row col-md-12">
                                    <div class="form col-md-2">
                                        <img class="rounded" src="/img/perfilusuario/despesas.jpeg"
                                            style="width:130px; height:190px">
                                    </div>
                                    <div class="responsive container form-group row border text-left col-md-10">
                                        <h5>Dados de Identificação da Despesa:</h5>
                                        <div class="form-group col-md-2">
                                            <label for="id">ID Saída Despesa</label>
                                            <input type="text" class="form-control" id="id" placeholder="" name="id"
                                                value="<%=despesassaidas.id%>" disabled autofocus />
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="despesasidentradas">ID Entrada Despesa</label>
                                            <input type="text" id="valueIDNomeProd" id="valueValorProd"
                                                class="form-control" id="despesasidentradas" placeholder=""
                                                name="despesasidentradas" value="<%=despesassaidas.despesasidentradas%>"
                                                disabled autofocus />

                                        </div>
                                        <div class="form-group col-md-7">
                                            <label for="nomedespesa">Nome Despesa</label>
                                            <select class="form-control" id="atualizarIDProd" onChange="updateIDProd()"
                                                id="nomedespesa" class="form-select" name="nomedespesa" required
                                                autofocus>
                                                <option value="<%=nomedespesa.id%>">
                                                    <%=nomedespesa.descricao%>
                                                </option>
                                                <% for(prod of listarentradas) { %>
                                                    <option value="<%=prod.id%>">
                                                        <%=prod.descricao%>
                                                    </option>
                                                    <% } %>
                                            </select>

                                            <footer align="justify">
                                                <b>Obs:</b> Ao TROCAR o Nome do Produto, será <b>ATUALIZADO ID do
                                                    Produto</b> e abaixo informado o valor a ser preenchido no campo:<b>
                                                    "Valor Unitário ATUALIZADO"</b>.
                                            </footer>
                                        </div>

                                        <div class="form-group col-md-2">
                                            <label for="valortotalsaida">Valor Total</label>
                                            <input type="text" min="0" name="valortotalsaida"
                                                onkeypress="return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 46 && event.charCode <= 57"
                                                class="form-control" id="valortotalsaida" placeholder=""
                                                value="<%=despesassaidas.valortotalsaida%>" required autofocus />
                                        </div>

                                        <div class="form-group col-md-9">
                                            <label for="descricaosaida">Descrição Despesa</label>
                                            <input type="text" min="0" name="descricaosaida" " class="
                                                form-control " id=" descricaosaida " placeholder=" " value="<%=despesassaidas.descricaosaida%>"
                                            required autofocus/>
                                        </div>
                                        <footer align="justify">
                                            <b>Obs:</b> Valor automático, mas caso altere, declarar com <b>"PONTO". Ex:
                                                R$2.5 ou R$1150.50</b>.
                                        </footer>
                                        <br><br>
                                        <div class="form-group col-md-3">
                                            <label for="datapagto">Data Pagto Despesa</label>
                                            <input type="text" min="0" name="datapagto" class=" form-control " id="
                                                datapagto " placeholder=" " value=" <%=despesassaidas.datapagto%>"
                                            required
                                            autofocus/>

                                        </div>
                                        <div class="form-group col-md-5">
                                            <label for="formapagto">Forma de Pagto da Saída de Despesa</label>
                                            <select class="form-control" id="formapagto" class="form-select"
                                                name="formapagto" value="<%=despesassaidas.formapagto%>" required
                                                autofocus>
                                                <option value="<%=nomeformapagto.id%>">
                                                    <%=nomeformapagto.formapagto%>
                                                </option>
                                                <% for(fg of formapagtos) { %>
                                                    <option value="<%=fg.formapagtosid%>">
                                                        <%=fg.formapagto%>
                                                    </option>
                                                    <% } %>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <!-- Script -->
                                <script src="../../../js/validarDados.js">
                                </script>

                                <br>

                                <div class="col-4 d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-right">Qual ação deseja realizar?</h4>
                                </div>
                                <div class="responsive container col-md-12">
                                    <div class="col-md-1" id="divleft">
                                        <% if(l.Tipousuario.tipousuario=='Administrador' ||
                                            l.Tipousuario.tipousuario=='Gerente' ||
                                            l.Tipousuario.tipousuario=='Supervisor' || l.tipousuarioid==2) {%>
                                            <button type="submit" id="validar" oninput="multiSaida()"
                                                class="btn btn-success btn-sm-3 profile-button text-white"
                                                onsubmit="return edit();"><i title="Salvar Alterações Desta Despesa" style="font-size: 15px;">Salvar</i></button>

                                            <% } else { %>

                                                <% } %>
                                    </div>
                                    <div class="col-md-1" id="divleft">
                                        <% if(l.Tipousuario.tipousuario=='Administrador' ) {%>
                                            <form method="POST"
                                            action="/despesas/saidas/<%=despesassaidas.id %>?_method=DELETE"
                                            onsubmit="return del();">
                                            <button action="submit" class="btn btn-danger btn-sm-3 text-white"
                                                title="Deletar Esta Saída de Despesa"><i
                                                    style="font-size: 15px;">Deletar</i>
                                            </button>
                                        </form>
                                            <% } else { %>

                                                <% } %>
                                    </div>
                                    <div class="col-md-6" id="divright">
                                        <a href="/despesas/saidas ">Voltar para Listagem de Saída das Despesas</a>
                                    </div>

                                </div>
                    </form>
                </div>

                <br>

        </div>
        <br><br>
        </section>
        </div>
        <script src="/js/alertas.js"></script>
</body>